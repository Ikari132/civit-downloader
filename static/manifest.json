{
  "manifest_version": 3,
  "name": "Civit model downloader",
  "description": "Extension for download models with full metadata from Civit",
  "version": "0.0.1",
  "action": {
    "browser_style": true,
    "default_icon": "icons/icon48.png",
    "default_popup": "popup.html",
    "default_title": "Civit model downloader"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "build/service_worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["http://civitai.com/*", "https://civitai.com/*"],
      "js": ["build/content.js"],
      "css": ["styles/content.css"]
    }
  ],
  "permissions": ["storage", "activeTab", "scripting", "downloads"]
}
