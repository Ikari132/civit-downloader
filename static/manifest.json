{
  "manifest_version": 3,
  "name": "Svelte extension",
  "description": "Svelte extension",
  "version": "0.0.1",
  "action": {
    "browser_style": true,
    "default_icon": "icons/icon48.png",
    "default_popup": "popup.html",
    "default_title": "Svelte extension"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "build/service_worker.js",
    "type": "module"
  },
  "permissions": ["storage", "alarms"],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
