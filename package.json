{
  "name": "svelte-extension",
  "version": "0.0.1",
  "main": "index.js",
  "type": "module",
  "author": "Anton Aksionau <ikari808@gmail.com>",
  "license": "MIT",
  "scripts": {
    "roll": "rollup -w --config",
    "build": "pnpm build:chrome",
    "build:firefox": "rollup -c && web-ext build -s ./static --overwrite-dest --artifacts-dir=dist/firefox",
    "build:chrome": "rollup -c && pnpm lint && web-ext build -s ./static --overwrite-dest --artifacts-dir=dist/chrome",
    "watch": "rollup -c -w",
    "run:firefox": "web-ext run -s ./static",
    "run:chrome": "web-ext run -s ./static --target=chromium",
    "run": "web-ext run -s ./static --target=chromium",
    "test": "node test/index.js --trace-warnings",
    "test:unit-build": "rollup -c && mocha test/test.js --require mock-local-storage --require ./test/globals.js --timeout 20000",
    "test:unit": "mocha test/test.js --require mock-local-storage --require ./test/globals.js --timeout 10000",
    "lint": "eslint src",
    "lint:svelte": "svelte-check",
    "lint:ext": "web-ext lint -s ./static"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^11.0.0",
    "@tsconfig/svelte": "^3.0.0",
    "@types/chrome": "^0.0.217",
    "@types/puppeteer": "^5.4.6",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "chrome-webstore-upload": "^1.0.0",
    "eslint": "^8.22.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "mocha": "^10.0.0",
    "mock-local-storage": "^1.1.23",
    "postcss": "^8.4.21",
    "postcss-import": "^15.1.0",
    "puppeteer": "^16.1.0",
    "rollup": "^3.17.3",
    "rollup-plugin-css-only": "^4.3.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-svelte": "^7.1.3",
    "sinon": "^14.0.0",
    "sinon-chrome": "^3.0.1",
    "svelte": "^3.55.1",
    "svelte-check": "^2.8.0",
    "svelte-loader": "^3.1.3",
    "svelte-preprocess": "^5.0.1",
    "typescript": "^4.9.5",
    "web-ext": "^7.5.0"
  }
}
